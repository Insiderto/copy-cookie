{
    "name": "Cookie copy",
    "version": "1.0",
    "description": "A simple extension to copy cookies from one tab to clipboard",
    "permissions": [
        "tabs",
        "cookies"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "manifest_version": 3,
    "icons": {
        "16":  "icons/icon16.png",
        "19":  "icons/icon19.png",
        "32":  "icons/icon32.png",
        "38":  "icons/icon38.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
      }
}
